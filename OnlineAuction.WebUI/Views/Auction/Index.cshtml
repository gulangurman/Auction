@model IEnumerable<AuctionViewModel>
@{
    ViewData["Title"] = "Auctions";
}

<h1>Auctions</h1>

<div class="row">
    <div class="col-12 col-lg-8 col-xxl-9 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">Active Auctions</h5>
            </div>
            <table class="table table-hover my-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th class="d-none d-xl-table-cell">Start Date</th>
                        <th class="d-none d-xl-table-cell">End Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var auction in Model)
                        {
                            <tr>
                                <td>@auction.Name</td>
                                <td>@auction.Description</td>
                                <td>@auction.Quantity</td>
                                <td class="d-none d-xl-table-cell">@auction.StartedAt.ToShortDateString()</td>
                                <td class="d-none d-xl-table-cell">@auction.FinishedAt.ToShortDateString()</td>
                                <td><span class="badge bg-success">@auction.Status</span></td>
                                <td><a asp-controller="Auction" asp-action="Detail" asp-route-id="@auction.Id">Details</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>